<Page x:Class="TestMaker.ViewTestQuestions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestMaker"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="ViewTestQuestions">
    <ScrollViewer Name="Scroll" HorizontalScrollBarVisibility="Visible">
        <Grid Name="questionsGrid">
            <Grid.Background>
                <ImageBrush ImageSource="greybackground.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox Margin="10,10,10,10" Name="titleBox"  Grid.Column="0" Grid.Row="0" FontSize="20" HorizontalAlignment="Center" FontStyle="Oblique" Foreground="DarkSlateGray">Test Title</TextBox>
        </Grid>
    </ScrollViewer>
</Page>
